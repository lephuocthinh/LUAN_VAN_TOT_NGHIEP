<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../include/_menu') %>

      <div class="content-wrapper">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
          <!-- Basic Layout -->
          <div class="row">
            <div class="col-xl">
              <div class="card mb-4">
                <div
                  class="card-header d-flex justify-content-between align-items-center"
                >
                  <h5 class="mb-0">Thay đổi kích cỡ</h5>
                </div>
                <div class="card-body">
                  <form action="/api/sizes/updateSize" method="POST" id="update_size">
                    <div class="mb-3">
                      <label for="exampleFormControlSelect1" class="form-label"
                        >Sản phẩm</label
                      >
                      <select
                        class="form-select"
                        name="productDetailId"
                        aria-label="Default select example"
                      >
                      <%
                      for(var i = 0; i < productDetails.length; i++) { %>
                     <option value="<%= productDetails[i]._id %>" <%= productDetails[i]._id === size.productDetail._id ? selected="selected" : "" %>>
                      <%= productDetails[i].product.name %> - <%= productDetails[i].color %>
                     </option>
                     <% } %>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label class="form-label" for="basic-default-fullname"
                        >Kích cỡ</label
                      >
                      <input type="hidden" name="sizeId" value="<%= size._id %>">
                      <input type="text" class="form-control" name="size" value="<%= size.size %>" required/>
                    </div>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- / Content -->
      </div>
    </div>
  </div>
</body>
