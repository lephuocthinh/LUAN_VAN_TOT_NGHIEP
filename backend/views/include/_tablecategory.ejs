<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../include/_menu') %>
      <!-- Layout container -->
      <div class="layout-page">
        <%- include('../include/_navbar') %>
        <div class="content-wrapper">
          <!-- Content -->

          <div class="container-xxl flex-grow-1 container-p-y">
            
            <!-- Basic Bootstrap Table -->
            <div class="card">
              <h5 class="card-header">Danh sách danh mục</h5>
              <div class="table-responsive text-nowrap">
                <table class="table">
                  <thead>
                    <tr>
                      <th>STT</th>
                      <th>Tên danh mục</th>
                      <th>Ảnh</th>
                      <th>Hành động</th>
                    </tr>
                  </thead>
                  <tbody class="table-border-bottom-0">
                    <% for(var i = 0; i < categories.length; i++) { %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td>
                        <i class="fab fa-angular fa-lg text-danger me-3"></i>
                        <strong><%= categories[i].name %></strong>
                      </td>
                     
                      <td>
                        <ul
                          class="list-unstyled users-list m-0 avatar-group d-flex align-items-center"
                        >
                          <li
                            data-bs-toggle="tooltip"
                            data-popup="tooltip-custom"
                            data-bs-placement="top"
                            class="avatar avatar-xs pull-up"
                            title="<%= categories[i].name %>"
                          >
                          <a href= <%= categories[i].categoryImage %>>
                            <img
                              src="<%= categories[i].categoryImage %>"
                              alt="Avatar"
                              class="rounded-circle"
                            />
                          </a>
                          </li>
                         
                        </ul>
                      </td>
                      
                      <td>
                        <a class="dropdown-item update" href="/update-category?id=<%= categories[i]._id%>"
                          ><i class="bx bx-edit-alt me-1"></i> Edit</a
                        >
                        <a class="dropdown-item deletecategory" data-id=<%= categories[i]._id%>
                          ><i class="bx bx-trash me-1"></i> Delete</a
                        >
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- / Content -->
     
  

